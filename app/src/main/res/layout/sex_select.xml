<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">


    <LinearLayout
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        android:background="@drawable/background_2">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:text="性别"
            android:padding="12dp"
            android:gravity="center"
            android:background="@drawable/background_5"
            android:textColor="#8c8c8c" />

        <TextView
            android:id="@+id/sex_men"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="男"
            android:padding="16dp"
            android:gravity="center"
            android:textSize="20dp"
            android:background="@drawable/history_frame_1"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textColor="#ef9d1a"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#e1dede"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            />
        <TextView
            android:id="@+id/sex_women"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="女"
            android:padding="16dp"
            android:gravity="center"
            android:textSize="20dp"
            android:background="@drawable/history_frame_1"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textColor="#239cec"
            android:layout_marginBottom="10dp"/>


    </LinearLayout>
</LinearLayout>